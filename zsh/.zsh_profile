unsetopt BEEP

#RBENV
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

#YARN
export PATH="$PATH:$(yarn global bin)"

#VSCODE
export PATH="$PATH:/Applications/Visual Studio Code.app/Contents/Resources/app/bin"

#NVM
export NVM_DIR="$HOME/.nvm"
  [ -s "/usr/local/opt/nvm/nvm.sh" ] && . "/usr/local/opt/nvm/nvm.sh"  # This loads nvm
  [ -s "/usr/local/opt/nvm/etc/bash_completion.d/nvm" ] && . "/usr/local/opt/nvm/etc/bash_completion.d/nvm"

# GOLANG
export GOPATH="$HOME/go"
export PATH=$PATH:$GOPATH/bin

#GENIE
export PATH="$GOPATH/github.com/gmanninglive/genie"
export GENIE_CONFIG='~/Coding/genieconfig/config.json'

#Aliases
alias gen='genie -config ~/Coding/genieconfig/config.json'
alias yard='cd ~/Coding/Work/yardlink-rails'
alias v='nvim'
alias grc='rubocop -a && git commit'
alias bsearch='git branch | grep'

#PYENV
export PATH="$HOME/.pyenv/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

#STOW
export STOW_FOLDERS="nvim,kitty,zsh,coc"

export DOTFILES=$HOME/.dotfiles

